@model LearnModel
@{
    ViewBag.Title = string.Format("Learning lesson '{0}' from '{1}'", Model.Category.Name, Model.Book.Name);
}

<div class="panel panel-default text-center">
    <div class="panel-heading">
        <h6><a type="button" role="button" class="btn btn-primary btn-sm" href="@Url.Action(nameof(HomeController.Book), "Home", new { name = @Model.Book.Name })">&laquo @Model.Book.Name</a></h6>
        <h5>@Model.Category.Name</h5>
        <h1>@Html.DisplayName(Model.Word.GetPolishPhrase()) </h1>
    </div>
    <div class="panel-body">
        <a class="btn btn-info btn-lg" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            ???
        </a>
        <div class="collapse" id="collapseExample">
            <p class="card-text">
                @foreach (var en in Model.Word.GetEnglishPhrases())
                {
                    <div class="alert alert-warning" role="alert"><h3>@en</h3></div>
                }
            </p>
            <a class="btn btn-danger btn-lg" type="button" href="@Url.Action(nameof(HomeController.Learn), "Home", LearnInput.Wrong(this.Model))"><span class="glyphicon glyphicon-minus" aria-hidden="true" /></a>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <a class="btn btn-success btn-lg" type="button" href="@Url.Action(nameof(HomeController.Learn), "Home", LearnInput.Right(this.Model))"><span class="glyphicon glyphicon-ok" aria-hidden="true" /></a>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-xs-6 text-left">
                <div class="badge">@Model.SpeedDisplay</div>
            </div>
            <div class="col-xs-6 text-right">
                <span class="badge">@Model.ProgresDisplay</span>
            </div>
        </div>
    </div>
</div>



