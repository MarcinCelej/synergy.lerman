@model EditBookModel
@{
    ViewBag.Title = "Edit book - " + Model.Name;
}

<div>
    <div class="panel panel-default text-center">
        <div class="panel-heading">
            @using (Html.BeginForm("BookSave", "Edit", FormMethod.Post, new {@class = "form-horizontal"}))
            {
                @Html.HiddenFor(book => book.Id)
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Book title</label>
                    @Html.TextBoxFor(book => book.Name, new {@class = "form-control"})
                </div>
                <button type="submit" class="btn btn-success btn-lg">Save</button>
            }
        </div>
        <div class="panel-body">
            <div>
                <a type="button" class="btn btn-success" style="margin-bottom: 10px"
                   href="@Url.Action(nameof(EditController.CategoryNew), "Edit", new {bookId = Model.Id})">
                     NEW <span class="glyphicon glyphicon-plus"></span>
                </a>
            </div>

            @foreach (var category in Model.Categories)
            {
                <div> 
                    <a type="button" class="btn btn-default" style="margin-bottom: 10px"
                       href="@Url.Action(nameof(EditController.Category), "Edit", new {id = category.Id})">
                         @category.Name <span class="badge">@category.Words.Count</span> <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </div>
            }
        </div>
        <div class="panel-footer">
            <div class="row">

            </div>
        </div>
    </div>
</div>


