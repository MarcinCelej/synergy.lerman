@model NewCategoryModel
@{
    ViewBag.Title = "Create category - " + Model.Name;
}

<div>
    <div class="panel panel-default text-center">
        <div class="panel-heading">
            <p>@Model.BookName</p>
            @using (@Html.BeginForm("CategoryCreate", "Edit", FormMethod.Post, new {@class = "form-horizontal"}))
            {
                @Html.HiddenFor(category => category.BookId)
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Category title</label>
                    @Html.TextBoxFor(category => category.Name, new {@class = "form-control"})
                </div>
                <button type="submit" class="btn btn-success btn-lg">Save</button>
            }
        </div>
